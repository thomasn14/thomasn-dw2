---
import "@fontsource-variable/dm-sans";
import ""
---

<style is:global>
  :root {
    --color-bg: #fffff1;
    --color-text: #230d3d;
    --color-primary: #6200ff;
    --color-secondary: #0003bb;
    --color-ternary: #00a391;
    --color-focus: #ff00c8;

    --font-primary: "DM Sans Variable", sans-serif;
    --font-secondary: "DM Sans Variable", sans-serif;
    --font-code: monospace;

    --size-sidenav-width: 300px;
    font-size: 20px;
  }
  

  body {
    font-family: var(--font-primary);
    background-color: var(--color-bg);
    color: var(--color-text);
  }
  a {
    color: var(--color-primary);
    text-decoration: underline var(--color-ternary) 1.5px;
    text-underline-offset: 0.2em;
    position: relative;
    z-index: 1;
  }
  a:hover {
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-secondary);
    font-weight: 700;
  }
  code {
    font-family: var(--font-code);
    border: 1px solid var(--color-secondary);
    padding: 0.25em;
    border-radius: 0.25em;
  }
  *:focus-visible {
    outline: 5px solid var(--color-focus);
  }

  .text-frame > * {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }
  .btn {
    padding: 0.5rem;
    border: 1px solid var(--color-primary);
    border-radius: 0.25rem;
    background-color: var(--color-bg);
    color: var(--color-primary);
    font-weight: 500;
    text-decoration: none;
  }

  .btn:hover {
    background-color: var(--color-primary);
    color: var(--color-bg);
  }
  .assignments-group {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }
</style>
