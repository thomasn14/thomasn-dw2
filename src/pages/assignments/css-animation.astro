---
import Layout from '../../layouts/Layout.astro';
export const pageTitle = "Css Animation";
---

<Layout/>

<body>
  <div class="css-animation">
    alternate
  </div>

    <div class="css-animation2">
        forwards
    </div>


    <div class="css-animation3">
        rotateBox
    </div>
    <div class="css-animation4">
        colorChange
    </div>
       <div class="wave-text">
    <span>W</span><span>A</span><span>V</span><span>E</span><span>!</span>
  </div>
</body>



  <style>
    body{
        background-color: rgb(53, 53, 114);
        color:white;
        display: flex;
        justify-content: center;
    }



    .css-animation{
        background-color: rgb(36, 130, 130);
        color:white;
        padding 2rem;
        font-size: 2rem;
        animation: grow 2s infinite alternate;
  }
      .css-animation2{
        background-color: rgb(36, 130, 130);
        color:white;
        padding 2rem;
        font-size: 2rem;
        animation: grow 4s infinite forwards 1s;
  }
        .css-animation3{
        background-color: rgb(36, 130, 130);
        color:white;
        padding 2rem;
        font-size: 2rem;
        animation: grow 4s infinite forwards 2s, rotateBox 4s infinite linear;
        border: 5px solid white;
  }
        .css-animation4{
        background-color: rgb(36, 130, 130);
        color:white;
        padding 2rem;
        font-size: 2rem;
        animation: grow 4s infinite forwards 3s, colorChange 3s infinite alternate;
        border: 4px dashed white;
  }

  @media (prefers-reduced-motion) {

    .css-animation4 {
      animation: none;
    }
  }


  @keyframes grow {
    0% {
      transform: scale(1);
      --myNumber: 0;
    }
    20%{

    }
    80%{
    }

    100% {
      transform: scale(1.5);
      --myNumber: 3;
    }
  }

  @keyframes colorChange{
    0% {
      background-color: rgb(36, 130, 130);
    }
    50%{
        background-color: rgb(130, 36, 130);
    }
    100% {
      background-color: rgb(130, 130, 36);
    }
  }
  @keyframes rotateBox{
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
<style>
    body {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
  background-color: #282c34;
  color: white;
  font-family: Arial, sans-serif;
}

.wave-text {
  display: flex;
  font-size: 3rem;
  font-weight: bold;
}

.wave-text span {
  display: inline-block;
  animation: wave 1.5s infinite ease-in-out;
}

.wave-text span:nth-child(1) {
  animation-delay: 0s;
}
.wave-text span:nth-child(2) {
  animation-delay: 0.2s;
}
.wave-text span:nth-child(3) {
  animation-delay: 0.4s;
}
.wave-text span:nth-child(4) {
  animation-delay: 0.6s;
}
.wave-text span:nth-child(5) {
  animation-delay: 0.8s;
}

@keyframes wave {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20px);
  }
}
</style>
  </style>