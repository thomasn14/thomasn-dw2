---
import Layout from "../layouts/Layout.astro";

---

  
<Layout>

<body>
      <h1>Nicky's DW2 Site!!</h1>

      <button id = "button-dark">Dark Theme</button>
      <button id = "button-light">Light Theme</button>


   
</body>
 </Layout>

<script>
    // find button
    const buttonDark = document.querySelector("#button-dark");
    // set color mode
    const setDark = function() {
        document.documentElement.style.colorScheme = "dark";}
    // connecting function to button
    buttonDark?.addEventListener("click", setDark);

    const buttonLight = document.querySelector("#button-light");
    const setLight = function() {
        document.documentElement.style.colorScheme = "light";}
    buttonLight?.addEventListener("click", setLight);
    
   
</script>


